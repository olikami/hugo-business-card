{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^netlify\\.toml$",
        "^netlify_parent\\.toml$"
      ],
      "matchStrings": [
        "HUGO_VERSION\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "hugo",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "gohugoio/hugo"
    }
  ],
  "lockFileMaintenance": { 
    "enabled": true,
    "extends": ["schedule:quarterly"]
  }
}
